{
  "watch": {
    "build": {
      "patterns": [
        "./templates/**/*",
        "./**/templates/**/*"
      ],
      "extensions": "html",
      "quiet": false
    }
  },
  "scripts": {
    "build": "postcss static/css/tailwind/main.css -o static/css/tailwind/main.min.css",
    "dev": "postcss static/css/tailwind/main.css -o static/css/tailwind/main.min.css --watch",
    "watch": "npm-watch"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.27",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.3.3"
  },
  "dependencies": {
    "npm-watch": "^0.11.0"
  }
}
